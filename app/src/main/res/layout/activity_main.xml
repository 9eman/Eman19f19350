<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/white">


    <ImageView
        android:id="@+id/iconequiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="140dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ss" />

    <TextView
        android:id="@+id/emantext"
        android:layout_width="352dp"
        android:layout_height="51dp"
        android:layout_below="@+id/iconequiz"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="20dp"
        android:text="to start the quiz click image of quiz."
        android:textColor="@color/black"
        android:visibility="invisible" />

    <Button
        android:id="@+id/RC_19f19350"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/emantext"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="145dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="90dp"
        android:backgroundTint="#177C05"
        android:text="read" />

    <LinearLayout
        android:id="@+id/r1_19f19350"
        android:layout_width="363dp"
        android:layout_height="231dp"
        android:layout_below="@+id/RC_19f19350"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        android:weightSum="2">


        <LinearLayout
            android:id="@+id/ChemisitryLinearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/emanbackground"
            android:gravity="center"
            android:onClick="Chemisitry"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/chemisitry" />

            <TextView
                android:id="@+id/Chemisitrytext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Chemistry"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/Chemisitrybutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Chemisitrytext"
                android:layout_marginStart="9dp"
                android:layout_marginTop="19dp"
                android:backgroundTint="#FFEA0707"
                android:onClick="phpbutton"
                android:text="delete" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/physicsLinearLayout"
            android:layout_width="0dp"
            android:layout_height="218dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@drawable/emanbackground"
            android:gravity="center"
            android:onClick="physics"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/physics" />

            <TextView
                android:id="@+id/physicstext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="physics"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/physicsbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/physicstext"
                android:layout_marginStart="9dp"
                android:layout_marginTop="19dp"
                android:backgroundTint="#EA0707"
                android:onClick="javabutton"
                android:text="delete" />
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/updateB_19f19350"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/r1_19f19350"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="90dp"
        android:backgroundTint="#409530"
        android:onClick="update_19f19337"
        android:text="update" />

    <Button
        android:id="@+id/closeapp"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/updateB_19f19350"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="90dp"
        android:backgroundTint="#FA0418"
        android:onClick="closeapp_19f19337"
        android:text="close app" />


</RelativeLayout>